<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @post.name %>
</p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>
<p>
  <b>Tags:</b>
  <%= join_tags(@post) %>
</p>

<% if @post.comments.length > 0 %>
  <h2>Comments</h2>
  <%= form_tag destroy_comments_posts_path, method: :delete do %>
    <%= render @post.comments %>
    <%= submit_tag "Delete selected comments" , :confirm => 'Are you sure?'%>
  <% end %>
<% end %>
<% if !@post.comments_closed %>
  <h2>Add a comment:</h2>
  <%= render "comments/form" %>
<% else %>
  <b>*Comments closed*</b>
<% end %>
<br />

<%= link_to 'Edit Post', edit_post_path(@post) %> |
<%= link_to 'Back to Posts', posts_path %> |